<Defs>

    <!--Trident-->
    <ThingDef ParentName="GladWeapons_Trident">
        <defName>GladWeapons_Trident</defName>
        <label>trident</label>
        <description>(Stab) [Melee Hit -10%, High Damage] A somewhat unwieldy weapon which, however, may be devastating against unarmored opponents
        </description>
        <graphicData>
            <!--TODO: Edit the correct path-->
        <texPath>Things/Item/Equipment/WeaponMelee/Glad_Trident</texPath>
        </graphicData>

        <weaponTags>
        <li>Gladiators_Weapon</li> 
        <li>MedievalShields_ValidSidearm</li>	  
        </weaponTags>
        
        <statBases>
            <WorkToMake>20000</WorkToMake>
            <Mass>2</Mass>		  
        </statBases>
        
        <equippedStatOffsets>
        <MeleeHitChance>-0.1</MeleeHitChance>  
        </equippedStatOffsets>
        
        <equippedAngleOffset>-45</equippedAngleOffset>
        
        <costList>
            <WoodLog>30</WoodLog>
            <Steel>45</Steel>
        </costList>
        
        <tools>
